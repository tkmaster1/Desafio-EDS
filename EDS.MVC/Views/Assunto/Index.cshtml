@model IEnumerable<EDS.MVC.ViewModels.AssuntoViewModel>

@{
    ViewBag.Title = "Assuntos";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Assuntos</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="breadcrumb-item active">Assuntos</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- DataTables Example -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-fw fa-bars"></i>
                    Lista
                    <button class="btn btn-secondary btn-sm float-right"
                            id="btnRefreshAssunto">
                        <i class="fa fa-fw fa-sync-alt" data-toggle="tooltip" title="Atualizar"></i>
                    </button>
                    <button class="btn btn-success btn-sm float-right"
                            id="btnCreateAssunto" style="color:white">
                        <i class="fa fa-fw fa-plus" data-toggle="tooltip" title="Incluir"></i>
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="dtAssunto" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>
                                        Descrição
                                    </th>
                                    <th style="width:100px; text-align-last:center;">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descricao)
                                        </td>
                                        <td style="width:150px; text-align-last:center;">
                                            <button type="button" class="btn btn-primary btnDetailsAssunto" id="btnDetailsAssunto" data-id="@item.AssuntoId" data-toggle="modal"><i class="fa fa-file" data-toggle="tooltip" title="Detalhe"></i></button>
                                            <button type="button" class="btn btn-primary btnEditarAssunto" id="btnEditarAssunto" data-id="@item.AssuntoId" data-toggle="modal"><i class="fa fa-edit" data-toggle="tooltip" title="Editar"></i></button>
                                            <button type="button" class="btn btnDeleteAssunto" data-id="@item.AssuntoId" data-nome="@item.Descricao" data-toggle="modal"><i class="fa fa-trash" data-toggle="tooltip" title="Excluir"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Modal -->
<div class="modal fade" id="modalAssunto" tabindex="-1" role="dialog" aria-labelledby="modalAssuntoTitle" aria-hidden="true">
</div>
<!-- Bootstrap modal popup -->
<div class="modal fade" id="modalDeleteAssunto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header alert alert-danger">
                <h4 class="modal-title" id="myModalLabel">Exclusão de Assunto</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-body-Assunto">
            </div>
            <div class="modal-footer">
                <button class="btn btn-success delete-confirm">Ok</button>
                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!-- End of the boostrap modal popup -->
@section Scripts{
    <script src="~/Scripts/Views/Assunto/assunto.js"></script>
}
